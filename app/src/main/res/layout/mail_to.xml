<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:textColor="@color/white"
            android:id="@+id/mailto"
            android:background="@color/black"
            android:textSize="20dp"
            android:text="Email to:xyz@gmail.com"
            android:layout_height="wrap_content">
        </TextView>
        <EditText
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"
            android:id="@+id/dailor_edittext_title"
            android:hint="Email title"
            android:gravity="top|left"
            android:background="@null"
            android:inputType="textMultiLine"
            android:lines="3"
            android:maxLines="5"
            android:scrollbars="vertical" />
        <View
            android:layout_width="match_parent"
            android:background="@color/black"
            android:layout_height="1dp">
        </View>

        <EditText
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:hint="Email body"
            android:id="@+id/dailor_edittext_body"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:background="@null"
            android:gravity="top|left"
            android:lines="12"
            android:maxLines="4"
            android:minLines="12"
            android:scrollbars="vertical" />
        <Button
            android:layout_width="match_parent"
            android:text="Send"
            android:textAllCaps="false"
            android:id="@+id/dailor_edittext_submit"
            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_height="wrap_content">
        </Button>
        <Button
            android:layout_width="match_parent"
            android:text="Cancel"
            android:textAllCaps="false"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:id="@+id/dailor_edittext_cancel"
            android:background="@color/black"
            android:layout_height="wrap_content">
        </Button>


    </LinearLayout>

</RelativeLayout>